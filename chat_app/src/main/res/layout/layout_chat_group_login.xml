<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="300dp"
    android:orientation="vertical"
    tools:background="@color/black">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="40dp"
        android:text="如果进入聊天室要输入房间号"
        android:textColor="@color/white" />


    <EditText
        android:id="@+id/user_id"
        style="@style/plv_login_edit_text_style"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm_42"
        android:layout_margin="@dimen/dm_10"
        android:hint="请输入用户id"
        android:inputType="number"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />


    <EditText
        android:id="@+id/app_roomId"
        style="@style/plv_login_edit_text_style"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm_42"
        android:layout_margin="@dimen/dm_10"
        android:hint="请输入房间号"
        android:inputType="number"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

    <Button
        android:id="@+id/btLogin"
        style="@style/Commit_Button_Style"
        android:background="@drawable/btn_green_selector"
        android:text="加入聊天室" />

</LinearLayout>